@model OnlineExamSystem.Models.OrganizationCreateForView
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Organization", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-row">

            <div class="form-group col-md-6">
                <div class="form-group">
                    <h2 class="align-content-center">Organization Entry</h2>
                </div>
                <div class="form-group">

                    @Html.LabelFor(c => c.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.TextBoxFor(c => c.Name, null, new { @class = "form-control", placeholder = "Name" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    <span class="text-danger" id="OrganizationValidationMessage"></span>
                 </div>

                <div class="form-group">
                    @Html.LabelFor(c => c.Code, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.TextBoxFor(c => c.Code, null, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(c => c.Address, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.TextBoxFor(c => c.Address, null, new { @class = "form-control", placeholder = "Address" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.ContactNumber, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.TextBoxFor(c => c.ContactNumber, null, new { @class = "form-control", placeholder = "Contact Number" })
                    @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                    <span class="text-danger" id="PhoneNumberValid"></span>
                </div>

                <div class="form-group">
                    @Html.LabelFor(c => c.About, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.TextAreaFor(c => c.About, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(c => c.Logo, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div>
                        <input type="file" name="Logo" class="form-control" />
                    </div>

                </div>
                <div class="col-md-3"></div>
                <div class="col-md-8">

                    <button type="submit" id="SubmitBtn" class="btn btn-primary btn-lg active ">Save</button>
                </div>


            </div>

        </div>
    </div>

}

@if (ViewBag.EMsg != null)
{
    <h4 style="color: red; font-weight: bold">@ViewBag.EMsg</h4>
}
@section scripts{
<script src="~/Scripts/Organization/OrganizationVal.js"></script>

}

