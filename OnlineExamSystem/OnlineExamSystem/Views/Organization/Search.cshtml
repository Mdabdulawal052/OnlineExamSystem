
@model OnlineExamSystem.Models.OrganizationCreateForView
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12">
    <h2>Search</h2>
    @Html.HiddenFor(c => c.Detailsid);
    
    @using (Html.BeginForm())
    {

        <div class="row">
            <div class="col-md-6">
                
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-6"></div>
                    <div class="col-6">
                        @Html.ActionLink("View Organization Details", "Details", new { id = Model.Detailsid })
                    </div>
                </div>
                
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(c => c.Name, htmlAttributes: new {@class = "col-md-2"})
                    @Html.TextBoxFor(c => c.Name, null, new {@class = "form-control", placeholder = "Name"})
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(c => c.Address, htmlAttributes: new {@class = "col-md-3"})
                    @Html.TextBoxFor(c => c.Address, null, new {@class = "form-control", placeholder = "Address"})
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(c => c.Code, htmlAttributes: new {@class = "col-md-2"})
                    @Html.TextBoxFor(c => c.Code, null, new {@class = "form-control", placeholder = "Code"})
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(c => c.ContactNumber, htmlAttributes: new {@class = "col-md-3 mt-1"})
                    @Html.TextBoxFor(c => c.ContactNumber, null, new {@class = "form-control", placeholder = "ContactNumber"})
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <input type="submit" class="btn btn-success float-left" value="Search"/>
        </div>

    }
</div>
<div class="">
    <table class="table  table-hover mt-5 pt-5">
        <thead class="table-primary">
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>ContactNo</th>
                <th>Courses</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.OrganizationList != null && Model.OrganizationList.Count > 0)
            {
                foreach (var org in Model.OrganizationList)
                {
                    <tr>
                        <td>@org.Name</td>
                        <td>@org.Address</td>
                        <td>@org.ContactNumber</td>
                        <td>@org.CourseTotal</td>
                        <td>
                            @Html.ActionLink("Edit", "OrgEdit", new { id = org.Id }) |
                            @Html.ActionLink("Details","OrgDetails", new { id = org.Id })
                        </td>
                    </tr>
                }
            }


        </tbody>
    </table>
</div>



